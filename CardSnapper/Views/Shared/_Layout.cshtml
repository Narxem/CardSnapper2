@using CardSnapper.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Card Snapper</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/materialize/css/materialize.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/materialize/css/palette.css" type="text/css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a href="/" class="brand-logo">CardSnapper</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                @if (HttpContext.Current.Session["User"] == null) {
                    <li><a href="/Cards/AllCards">Toutes les cartes</a></li>
                    <li><a href="/Sign/signup">S'inscrire</a></li>
                    <li><a href="/Sign/signin">Se connecter</a></li>
                }
                else if (!((User) HttpContext.Current.Session["User"]).isAdmin) {
                    <li><a href="/Cards/OpenBooster">Ouvrir un booster</a></li>
                    <li><a href="/MaCollection/Index">Ma collection</a></li>
                    <li><a href="/Cards/allCards">Toutes les cartes</a></li>
                    <li><a href="/Sign/logout">Se déconnecter</a></li>
                }
                else {
                    <li><a href="/Cards/Create">Ajouter une carte</a></li>
                    <li><a href="/Cards/OpenBooster">Ouvrir un booster</a></li>
                    <li><a href="/MaCollection/Index">Ma collection</a></li>
                    <li><a href="/Cards/allCards">Toutes les cartes</a></li>
                    <li><a href="/Sign/logout">Se déconnecter</a></li>
                }
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Copyright @DateTime.Now.Year - CardSnapper</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/materialize/js/materialize.min.js"></script>
</body>
</html>
